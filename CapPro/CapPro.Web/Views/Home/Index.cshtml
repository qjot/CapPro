@{
    ViewData["Title"] = "CapPro";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="10000">

    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://www.capgemini.com/wp-content/uploads/2017/10/cg_logo.jpg" alt="capgemini"  />
            <div class="carousel-caption" role="option">
                <p class="carouselText">
                    Recruitment project for Capgemini Company<br />
                    <a class="btn btn-default" href="https://www.capgemini.com/">
                        Capgemini Company Site
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="http://heygom.com/wp-content/uploads/2016/10/Customer-management-How-to-say-no-to-a-customer-without-ruining-relationships.png" alt="Management Services" />
            <div class="carousel-caption" role="option">
                <p class="carouselText">
                    Professional customer management system for your company!<br />
                    <a asp-area="" asp-controller="Customer" asp-action="Index" class="btn btn-default">
                        Check Costumer Service!
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://jobs.vettimes.co.uk/getasset/0d7718f0-ad4f-4cc5-b01f-a397c15b2dd3/" alt="Career"  />
            <div class="carousel-caption" role="option">
                <p class="carouselText">
                    Start your new career now.<br />
                    <a class="btn btn-default" href="https://www.capgemini.com/pl-pl/kariera/">
                        Check opportunities now!
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


